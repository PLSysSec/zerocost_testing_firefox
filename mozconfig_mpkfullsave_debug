ac_add_options --enable-application=browser

ac_add_options --with-wasm-sandboxed-libraries=mpkfullsave,graphite,ogg,jpeg

mk_add_options MOZ_OBJDIR=../ffbuilds/firefox_latest_mpkfullsave_debug
ac_add_options --enable-debug
ac_add_options --disable-optimize

